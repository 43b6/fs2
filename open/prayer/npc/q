{
        set_name("[31mÑª÷è÷ë[0m", ({ "red-kylin","kylin" }) );
        set("race", "Ò°ÊÞ");
        set("age", 200);
        set("long", "ÆÆÐ°¶´¿ßÖÐ×î¿Ö²ÀµÄ¹ÖÊÞ,È«ÉíÈç»ðÑ×°ãÍ¨ºì.\n");
        set("str", 100);
        set("max_kee", 10000);
        set("kee", 10000);
        set("max_force", 10000);
        set("force",10000);
        set("force_factor",5);
        set("limbs", ({ "Í·²¿", "¸¹²¿","ÉíÌå", "Ç°½Å" , "ºó½Å" , "Î²°Í" }) );
