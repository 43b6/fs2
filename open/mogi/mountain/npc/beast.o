#include <ansi.h>
int dec_kee(object);
int do_set(object);
inherit ITEM;
void create() {
        set_name("雪妖之眼",({"snow ghost eye" , "eye"}));
        set("no_get",1);
        set("no_sac",1);
   setup();
        set("chat_chance",30);
        set("chat_msg",({

            HIC"雪花夹着刺骨的寒风吹到你身上～\n"NOR,
      }));
        setup();
 }

void init() {
        object obj;
        if(interactive(obj=this_player())) {
           dec_kee(obj);
           do_set(obj);
           do_set(obj);
        }
 }

int dec_kee(object obj) {
        obj->add("gin",-3);
        obj->add("kee",-5);
        obj->add("sen",-3);
       return 1;
}

int do_set(object obj) {
        object mob;
       if(obj->query("race") == "野兽") return 1;
        if(obj->query("max_force") < 500 &&
           obj->query("combat_exp") < 250000) return 1;
        switch(random(8)+1) {
           case 1  : mob=new("/open/mogi/mountain/npc/mob1");
                     mob->move(environment(obj));
                     break;
           case 3  : mob=new("/open/mogi/mountain/npc/mob2");
                     mob->move(environment(obj));
                     break;
           case 5  : mob=new("/open/mogi/mountain/npc/mob3");
                     mob->move(environment(obj));
                     break;
           case 8  : mob=new("/open/mogi/mountain/npc/mob4");
                     mob->move(environment(obj));
                     break;
           default : break;
        }
        
        return 1;
}
